{
    "env": {
        "browser": true, // Indicates that the code will be running in a web browser environment.
        "es2021": true // Specifies that ECMAScript 2021 features are supported.
    },
    "extends": [
        "plugin:react/recommended", // Extends ESLint rules for React.
        "standard" // Extends the StandardJS rules for JavaScript code style.
    ],
    "overrides": [
        // You can add specific rule overrides for different files or directories here.
    ],
    "parserOptions": {
        "ecmaVersion": "latest", // Specifies the ECMAScript version to use (latest).
        "sourceType": "module" // Indicates that the code uses ECMAScript modules.
    },
    "plugins": [
        "react" // Enables ESLint to lint React-specific code.
    ],
    "settings": {
        "react": {
            "version": "18.2.0" // Adjust the version as per your project's React version
        }
    },
    "rules": {
        "no-unused-vars": "warn", // Warns about unused variables.
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ] // Warns about console.log, console.warn, and console.error.
    }
}